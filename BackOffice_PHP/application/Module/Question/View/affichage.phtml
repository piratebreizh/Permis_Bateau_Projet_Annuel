function getSpan($is_correst)
{
    if ($is_correst) {
        return '<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>';
    } else {
        return '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>';
    }
}

